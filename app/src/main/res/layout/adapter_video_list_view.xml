<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:minHeight="200dip"
            android:visibility="visible">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_main"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/newplay"/>

            <de.bvb.study.ui.widget.video.VideoSuperPlayer
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:singleLine="true"
                android:text="abd"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/icon_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDiscuss"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxWidth="48dp"
                android:paddingBottom="6dp"
                android:src="@drawable/selector_discuss"
                android:paddingTop="6dp" />

            <ImageView
                android:id="@+id/imageViewShare"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxWidth="48dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/selector_share"/>

            <ImageView
                android:id="@+id/imageViewDownload"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxWidth="48dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/selector_download"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>