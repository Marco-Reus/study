<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_bop_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/app_green">

    <!-- 顶部栏左边 -->

    <ImageView
        android:id="@+id/iv_top_bar_left"
        android:layout_width="@dimen/top_bar_left_icon_size"
        android:layout_height="@dimen/top_bar_left_icon_size"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_top_bar"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"/>

    <!-- 顶部栏中间标题 -->

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/top_bar_title_text_size"/>

    <!-- 顶部栏右边 -->

    <RelativeLayout
        android:id="@+id/rl_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_top_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_right_text_size"/>

        <ImageView
            android:id="@+id/iv_top_bar_right"
            android:layout_width="@dimen/top_bar_right_icon_size"
            android:layout_height="@dimen/top_bar_right_icon_size"/>
    </RelativeLayout>

</RelativeLayout>